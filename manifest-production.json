{
  "manifest_version": 3,
  "name": "LinkedIn to Airtable Contact Saver",
  "version": "1.0.0",
  "description": "Capture LinkedIn profile data and save contacts directly to Airtable for sales professionals and recruiters.",

  "permissions": [
    "activeTab",
    "sidePanel",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://linkedin.com/*",
    "https://www.linkedin.com/*",
    "https://api.airtable.com/*"
  ],

  "background": {
    "service_worker": "background-production.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://linkedin.com/in/*",
        "https://www.linkedin.com/in/*"
      ],
      "js": ["content-production.js"],
      "run_at": "document_idle"
    }
  ],

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "action": {
    "default_title": "Open LinkedIn Contact Saver"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
